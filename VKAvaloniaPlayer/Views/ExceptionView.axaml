<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VKAvaloniaPlayer.Views.ExceptionView">

    <StackPanel VerticalAlignment="Center" Spacing="20">
        <TextBlock FontWeight="UltraBold" Text="{Binding ErrorMessage}" HorizontalAlignment="Center"
                   VerticalAlignment="Center" TextTrimming="CharacterEllipsis" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Spacing="10">
            <Button Command="{Binding CallActionCommand}" Content="{Binding ButtonMessage}" />
        </StackPanel>
    </StackPanel>
</UserControl>