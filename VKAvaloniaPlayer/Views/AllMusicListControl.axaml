<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VKAvaloniaPlayer.Views.AllMusicListControl">

	<ListBox Background="White" Items="{Binding AudioList}" SelectedItem="{Binding SelectedModel}">
		<ListBox.DataTemplates>
			<DataTemplate>
				<Grid>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="1*"></ColumnDefinition>
						<ColumnDefinition Width="Auto"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<StackPanel Spacing="5" Orientation="Horizontal">
					<Border CornerRadius="10" Width="50" Height="50" >
						<Border.Background>
							<ImageBrush Source="{Binding Cover}"></ImageBrush>
						</Border.Background>
					</Border>
						<StackPanel Margin="5" Spacing="5">
							<TextBlock FontSize="14"  Text="{Binding Title}"></TextBlock>
							<TextBlock Foreground="#737272" FontSize="14" Text="{Binding Artist}"></TextBlock>
						</StackPanel>
					</StackPanel>				
				</Grid>	
			</DataTemplate>
		</ListBox.DataTemplates>
	</ListBox>
</UserControl>
